Listen <%= port %>

NameVirtualHost *:<%= port %>

<VirtualHost *:<%= port %>>
  ServerName <%= name %>
  ServerAdmin root@localhost

  ## Vhost docroot
  DocumentRoot "<%= docroot %>"


  <Directory "<%= docroot %>">
    Options Indexes FollowSymLinks MultiViews
    AllowOverride None
    Require all granted
  </Directory>

  ## Logging
  ErrorLog "/var/log/httpd/<%= name %>_error.log"
  ServerSignature Off
  CustomLog "/var/log/httpd/<%= name %>_access_log" combined
  ## Script alias directives
  ScriptAlias /cgi-bin "/var/www/cgi-bin"
</VirtualHost>
